{
  "name": "autorenter_angular1",
  "version": "0.0.1",
  "description": "AutoRenter UI",
  "keywords": [
    "angular",
    "npm",
    "reference"
  ],
  "author": "Fusion Alliance",
  "contributors": [
    {
      "name": "Allen Buckley <allensb@gmail.com>"
    },
    {
      "name": "Ray Clanan <rclanan@utopianconcept.com>"
    },
    {
      "name": "Jarred Keuch <jkeuch@fusionalliance.com>"
    }
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@stash.fusionalliance.com:7999/fusadip/autorenter_angular1.git"
  },
  "bugs": {
    "email": "code@fusionalliance.com",
    "url": "https://jira.fusionalliance.com/browse/AUT"
  },
  "license": "MIT",
  "scripts": {
    "install": "npm install --no-bin-links || npm run install:recover",
    "install:cleanup": "egrep -r -l --include package.json '\"(post|pre)?install\":' ./node_modules | cut -d / -f 1-3 | uniq | xargs rm -rf",
    "install:recover": "npm run install:cleanup && npm run install",

    "clean": "node ./node_modules/rimraf/bin.js dist && node ./node_modules/mkdirp/bin/cmd.js dist",
    "lint": "node ./node_modules/eslint/bin/eslint.js './src/**/*.js'",
    "test": "node ./node_modules/karma/bin/karma start --single-run",

    "prebuild": "npm run clean -s",
    "build": "echo '=> build the project' && npm run copy:assets -s && npm run copy:html -s && npm run build:js -s && npm run copy:angular -s && npm run copy:bootstrap -s && npm run copy:strings -s",
    "prebuild:js": "node ./node_modules/mkdirp/bin/cmd.js dist/scripts && node ./node_modules/mkdirp/bin/cmd.js dist/assets/bootstrap",
    "build:js": "echo '=> build:js' && node ./node_modules/webpack/bin/webpack.js --display-modules --display-reasons --progress",
    "build:css": "echo '=> build:css' && node ./node_modules/pleeease-cli/bin/pleeease compile",

    "copy:assets": "echo '=> copy:assets' && cp -rf src/assets/ dist/assets",
    "copy:html": "echo '=> copy:html' && node ./node_modules/mkdirp/bin/cmd.js dist/app && cp src/app/**/*.html dist/app && cp src/index.html dist",
    "copy:angular": "cp node_modules/angular/angular.js dist/scripts/ && cp node_modules/angular-ui-router/release/angular-ui-router.js dist/scripts/",
    "copy:bootstrap": "cp node_modules/bootstrap/dist/js/bootstrap.min.js dist/assets/bootstrap && cp node_modules/bootstrap/dist/css/bootstrap.min.css dist/assets/bootstrap && npm run copy:jquery -s",
    "copy:jquery": "cp node_modules/jquery/dist/jquery.min.js dist/assets/bootstrap",
    "copy:strings": "cp node_modules/fa-strings.js/dist/strings.1.0.0.min.js dist/scripts/",

    "dev:build": "npm run install && npm run prebuild && npm run lint && npm run test && npm run build",
    "dev:watch": "npm run prebuild && npm run lint && npm run test && npm run build",
    "watch:dev": "node ./node_modules/watch/cli.js 'npm run dev:watch' ./src -d"
  },
  "dependencies": {
    "angular": "1.5.5",
    "angular-ui-router": "0.3.0",
    "angulartics": "1.0.3",
    "bootstrap": "3.3.6",
    "fa-strings.js": "1.0.0",
    "jquery": "2.2.3",
    "lodash": "4.11.1"
  },
  "devDependencies": {
    "angular-mocks": "1.5.5",
    "browser-sync": "2.12.5",
    "chai": "3.5.0",
    "eslint": "2.10.2",
    "eslint-config-es5": "0.5.0",
    "eslint-plugin-import": "1.8.1",
    "karma": "0.13.22",
    "karma-angular": "0.0.6",
    "karma-chai": "0.1.0",
    "karma-mocha": "1.0.1",
    "karma-phantomjs-launcher": "1.0.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.7.0",
    "mkdirp": "0.5.1",
    "mocha": "2.4.5",
    "npm-html2js": "0.1.8",
    "phantomjs-prebuilt": "2.1.7",
    "pleeease": "4.0.4",
    "pleeease-cli": "4.0.0",
    "remap-istanbul": "0.6.3",
    "rimraf": "2.5.2",
    "watch": "0.19.1",
    "webpack": "1.13.1"
  }
}
